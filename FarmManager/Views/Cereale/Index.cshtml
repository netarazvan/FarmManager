@model IEnumerable<FarmManager.Models.Cereale>

@{
    ViewData["Title"] = "Index";
}

<h1>Cereale</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProdusNavigation.Produs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantitateTone)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProdusNavigation.Produs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantitateTone)
                </td>

                <td>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>